@model IEnumerable<TarefasArnaldo.Models.Tarefas>
<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Id</label>
            <input  class="form-control"
                    type="text" name="id"/>
        </div>

        <div class="form-group">
            <label>Nome Tarefa</label>  
            <input  class="form-control"
                    type="text" name="nome"/>
        </div>

        <div class="form-group">  
            <label>Data Limite</label>
            <input  class="form-control"
                    type="text" name="dataLimite"/>
        </div>

         <div class="form-group">
            <label>Percent Concluido</label> 
            <input  class="form-control"
                    type="text" name="percentConcluido"/>
        </div>
        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>

